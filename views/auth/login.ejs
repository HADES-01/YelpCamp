<%- include('../partials/header') %>
<%- include('../partials/flash') %>
<div class="container mt-5 text-center">
    <div class="row">
        <div class="col"></div>
        <div class="col-md-5">
            <div class="card shadow p-4 h-100">
                <h1 class="display-4" >Login</h1>
                <form class="form inline text-left" method="post" action="/login">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" name="username" placeholder="username" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" name="password" placeholder="Password" class="form-control" required>
                    </div>
                    <button class="btn btn-block btn-danger" type="submit">Login</button>
                </form>
                <p class="lead mt-3">Don't have an account? <a href="/register">Sign Up</a></p>
    <!--            <a href="/campgrounds" class="ui button red inverted" >Go Back</a>-->
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
<%- include('../partials/footer') %>
