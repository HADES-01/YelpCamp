<%- include('../partials/header') %>
<%- include('../partials/flash') %>
<div class="container mt-5" style="text-align: center;">
    <div class="row">
        <div class="col"></div>
        <div class="col-md-5">
            <div class="card shadow p-4 h-100">
                <h1 class="display-4" >Sign Up</h1>
                <span class="lead text-left text-sm my-4">Fields marked * are required</span>
                <form class="form text-left inline" method="post" action="/user/<%=user.id%>?_method=PUT">
                    <div class="form-group">
                        <label>Username * </label>
                        <input type="text" name="user[username]" placeholder="username" class="form-control" value="<%= user.username %>" required>
                    </div>
                    <div class="form-group">
                        <label>Name * </label>
                        <input type="text" name="user[name]" placeholder="John Doe" class="form-control" value="<%= user.name %>">
                    </div>
                    <div class="form-group">
                        <label>Avatar</label>
                        <input type="text" name="user[avatar]" placeholder="Link to Image" class="form-control" value="<%= user.avatar %>">
                    </div>
                    <div class="form-group">
                        <label>Email * </label>
                        <input type="text" name="user[contact]" placeholder="someone@abc.com" class="form-control" required value="<%= user.contact %>">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" name="user[phone]" placeholder="Phone Number" class="form-control" value="<%= user.phone %>">
                    </div>
                    <button class="btn btn-block btn-success mt-4" type="submit">Edit</button>
                </form>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
<%- include('../partials/footer') %>

