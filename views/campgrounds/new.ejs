<%- include('../partials/header') %>
<div class="container mt-4">
    <div class="row">
        <div class="col"></div>
        <div class="col-md-8 col-lg-8">
            <div class="card shadow p-4">
                <h1 class="display-4 text-center">Create a Campground</h1>
                <form action="/campgrounds" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" type="text" placeholder="Name" name="camp[name]" required>
                    </div>
                    <div class="form-group">
                        <label>Image (primary)</label>
                        <input class="form-control" type="text" placeholder="Image Link" name="camp[image1]" required>
                    </div>
                    <div class="form-group">
                        <label>Image (optional)</label>
                        <input class="form-control" type="text" placeholder="Image Link" name="camp[image2]">
                    </div>
                    <div class="form-group">
                        <label>Image (optional)</label>
                        <input class="form-control" type="text" placeholder="Image Link" name="camp[image3]">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="5" type="text" placeholder="Description" name="camp[description]" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Booking Start</label>
                        <input type="date" class="form-control" name="camp[bookingStart]" required>
                    </div>
                    <div class="form-group">
                        <label>Booking End</label>
                        <input type="date" class="form-control" name="camp[bookingEnd]" required>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" name="camp[address]" required>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend3">$</span>
                            </div>
                            <input type="number" class="form-control" placeholder="9.00/night" name="camp[price]" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-default btn-block" type="submit">
                    </div>
                </form>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
<%- include('../partials/footer') %>
