<%- include('../partials/header') %>
<div class="container mt-5 text-center">
    <div class="row">
        <div class="col"></div>
        <div class="col-md-8">
            <div class="card shadow p-4 h-100">
                <h1 class="display-4">Edit <%= campground.name%></h1>
                <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="post" class="inline text-left">
                    <div class="form-group">
                        <label for="Name">Name: </label>
                        <input class="form-control" type="text" placeholder="Name" name="camp[name]" value="<%= campground.name%>">
                    </div>
                    <div class="form-group">
                        <label for="Image">Image</label>
                        <input class="form-control" type="text" placeholder="Image" name="camp[image]" value="<%= campground.image[0]%>">
                    </div>
                    <div class="form-group">
                        <label>Image (optional)</label>
                        <input class="form-control" type="text" placeholder="Image Link" value="<%= campground.image[1]%>" name="camp[image2]">
                    </div>
                    <div class="form-group">
                        <label>Image (optional)</label>
                        <input class="form-control" type="text" placeholder="Image Link" value="<%= campground.image[2]%>" name="camp[image3]">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="5" type="text" placeholder="Description" name="camp[description]" required><%= campground.description%></textarea>
                    </div>
                    <div class="form-group">
                        <label>Booking Start</label>
                        <input type="date" class="form-control" name="camp[bookingStart]" value="<%= campground.bookingStart%>" required>
                    </div>
                    <div class="form-group">
                        <label>Booking End</label>
                        <input type="date" class="form-control" name="camp[bookingEnd]" value="<%= campground.bookingEnd%>" required>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" name="camp[address]" value="<%= campground.address%>" required>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend3">$</span>
                            </div>
                            <input type="number" class="form-control" placeholder="9.00/night" name="camp[price]" value="<%= campground.price%>" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-success btn-block" type="submit">
                    </div>
                </form>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>
<%- include('../partials/footer') %>
